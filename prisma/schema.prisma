// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String @default("admin")
  password String @default("admin")
}

model Account {
  id          Int          @id @default(autoincrement())
  name        String
  username    String
  email       String
  phoneNumber String
  password    String
  createdAt   DateTime     @default(now())
  tags        AccountTag[]
}

model AccountTag {
  id        Int      @id @default(autoincrement())
  tag       String
  Account   Account? @relation(fields: [accountId], references: [id])
  accountId Int?
}

model Note {
  id        Int       @id @default(autoincrement())
  entry     String
  createdAt DateTime  @default(now())
  tags      NoteTag[]
}

model NoteTag {
  id     Int    @id @default(autoincrement())
  tag    String
  Note   Note?  @relation(fields: [noteId], references: [id])
  noteId Int?
}

model Diary {
  id        Int      @id @default(autoincrement())
  entry     String
  createdAt DateTime
}

model Balance {
  id      Int     @id @default(autoincrement())
  balance Decimal
}

model Traffic {
  id     Int     @id @default(autoincrement())
  amount Decimal
  note   String
}
